<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#AF0000</item>
        <item name="colorPrimaryDark">#770000</item>
        <item name="colorAccent">#AF0000</item>
        <item name="android:itemBackground">#FFFFFF</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- This would set the toolbar's background color -->
        <item name="android:background">#AF0000</item>
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">#770000</item>
        <!-- android:actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">#FFFFFF</item>
        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <!--
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        -->
    </style>

    <style name="ToolbarColoredBackArrow" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorControlNormal">#FFFFFF</item>
    </style>

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
